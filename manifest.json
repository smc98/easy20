{
  "manifest_version": 3,
  "name": "Easy20",
  "version": "1.0.0",
  "description": "Rellena autom√°ticamente fichas de monstruos en nivel20.com desde un bestiario prolijo",

"browser_specific_settings": {
  "gecko": {
    "id": "easy20@extension.local",
    "strict_min_version": "109.0",
    "data_collection_permissions": {
      "required": ["none"],
      "optional": []
    }
  }
},
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://nivel20.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://nivel20.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/data/bestiary-data.json.gz",
        "js/content.js",
        "js/modules/*.js",
        "js/utils/*.js",
        "js/lib/*.mjs"
      ],
      "matches": ["https://nivel20.com/*"]
    }
  ]
}
